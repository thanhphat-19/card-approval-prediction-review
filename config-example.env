# =============================================================================
# Card Approval Prediction - Configuration Template
# =============================================================================
# =============================================================================
# GCP Configuration
# =============================================================================
GCP_PROJECT_ID=your-gcp-project-id
GCP_REGION=us-east1
GCP_ZONE=us-east1-b

# =============================================================================
# GKE Configuration
# =============================================================================
GKE_CLUSTER_NAME=your-cluster-name
GKE_NAMESPACE=card-approval

# =============================================================================
# Docker Registry
# =============================================================================
# For GCP Artifact Registry: ${GCP_REGION}-docker.pkg.dev/${GCP_PROJECT_ID}/your-repo
DOCKER_REGISTRY=us-east1-docker.pkg.dev
DOCKER_REPOSITORY=your-gcp-project-id/your-repo-name
IMAGE_NAME=card-approval-api

# =============================================================================
# Database Credentials (Generate secure passwords!)
# =============================================================================
# Card Approval API PostgreSQL
POSTGRES_APP_DATABASE=card_approval_db
POSTGRES_APP_USERNAME=app_user
POSTGRES_APP_PASSWORD=change-me-use-strong-password

# MLflow PostgreSQL
POSTGRES_MLFLOW_DATABASE=mlflow
POSTGRES_MLFLOW_USERNAME=mlflow
POSTGRES_MLFLOW_PASSWORD=change-me-use-strong-password

# =============================================================================
# Service Credentials
# =============================================================================
# Grafana
GRAFANA_ADMIN_USER=admin
GRAFANA_ADMIN_PASSWORD=change-me-use-strong-password

# Jenkins
JENKINS_ADMIN_USER=admin
JENKINS_ADMIN_PASSWORD=change-me-use-strong-password

# SonarQube (for local development)
SONARQUBE_JDBC_USERNAME=sonar
SONARQUBE_JDBC_PASSWORD=sonar
SONARQUBE_TOKEN=  # Generate from SonarQube UI: Administration > Security > Users > Tokens

# =============================================================================
# GCS Configuration (for MLflow artifacts)
# =============================================================================
GCS_BUCKET_NAME=your-gcp-project-id-data
GCS_ARTIFACT_PATH=mlflow-artifacts

# =============================================================================
# Workload Identity (GCP Service Account)
# =============================================================================
# Format: service-account-name@project-id.iam.gserviceaccount.com
GCP_MLFLOW_SERVICE_ACCOUNT=mlflow-gcs@your-gcp-project-id.iam.gserviceaccount.com

# =============================================================================
# GCP Service Account Key (for local dev / Ansible / Jenkins)
# =============================================================================
# Path to your GCP service account JSON key file
# Create: gcloud iam service-accounts keys create ~/secrets/gcp-key.json --iam-account=${GCP_MLFLOW_SERVICE_ACCOUNT}
GCP_KEY_PATH=~/secrets/gcp-key.json

# =============================================================================
# Ingress Configuration
# =============================================================================
INGRESS_HOST_API=card-approval-api.example.com
INGRESS_HOST_MLFLOW=mlflow.example.com
INGRESS_HOST_GRAFANA=grafana.example.com

# =============================================================================
# OpenTelemetry Tracing Configuration
# =============================================================================
# Distributed tracing with Grafana Tempo
OTEL_ENABLED=true
OTEL_SERVICE_NAME=card-approval-api
# Tempo OTLP endpoint (gRPC)
OTEL_EXPORTER_ENDPOINT=http://tempo.monitoring:4317
# Sampling rate: 1.0 = 100%, 0.1 = 10%
OTEL_SAMPLING_RATE=0.1

# =============================================================================
# GitHub Configuration (for CI/CD webhooks)
# =============================================================================
GITHUB_REPO_OWNER=your-github-username
GITHUB_REPO_NAME=card-approval-prediction
GITHUB_BRANCH=main
# Generate a Personal Access Token with 'admin:repo_hook' permission
GITHUB_TOKEN=your-github-personal-access-token
